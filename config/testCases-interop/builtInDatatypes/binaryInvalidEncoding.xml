<testCaseGroup xmlns="http://www.sun.com/japex/testSuite" xmlns:xi="http://www.w3.org/2001/XInclude"
    name="Invalid binary encoding">

    <param name="org.w3c.exi.ttf.useSchemas" value="true" />
    <param name="org.w3c.exi.ttf.schemaLocation"
        value="${japex.exi.ttfms.testCasesDir}/interop/datatypes/binary/binary.xsd"/>
    <param name="test.docFolder" value="${japex.exi.ttfms.testCasesDir}/interop/datatypes/binary"/>
    <param name="reference" value="http://www.w3.org/TR/exi/#encodingBinary"/>

    <testCase name="base64.invalid-00">
        <param name="description"  value="Invalid base64 element value"/>
        <param name="japex.inputFile" value="${test.docFolder}/base64-invalid-00.xml" />
    </testCase>
    <testCase name="base64.invalid-01">
        <param name="description"  value="Invalid base64 attribute value"/>
        <param name="japex.inputFile" value="${test.docFolder}/base64-invalid-01.xml" />
    </testCase>
    <testCase name="hex.invalid-00">
        <param name="description"  value="Invalid hexa value"/>
        <param name="japex.inputFile" value="${test.docFolder}/hex-invalid-00.xml" />
    </testCase>

</testCaseGroup>
