<testCaseGroup xmlns="http://www.sun.com/japex/testSuite" xmlns:xi="http://www.w3.org/2001/XInclude"
    name="Schema-Informed Declared Production tests - &apos;sequence&apos; group">
    <param name="schemaInformedDataDir" value="${japex.exi.ttfms.testCasesDir}/interop/schemaInformedGrammar"/>

    <param name="groupId" value="${groupId} | sequenceGrammar"/>

    <param name="org.w3c.exi.ttf.useSchemas" value="true" />
    <param name="org.w3c.exi.ttf.schemaLocation" value="${schemaInformedDataDir}/acceptance.xsd"/>
    <param name="reference" value="http://www.w3.org/TR/exi/#sequenceGroupTerms"/>

    <testCase name="schemaInformed.declared.sequence-01">
        <param name="testDescription"  value="&apos;sequence&apos; instance with optional particles present"/>
        <param name="japex.inputFile" value="${schemaInformedDataDir}/declaredProductions/sequence-01.xml" />
    </testCase>

    <testCase name="schemaInformed.declared.sequence-02">
        <param name="testDescription"  value="&apos;sequence&apos; instance with optional particles omitted"/>
        <param name="japex.inputFile" value="${schemaInformedDataDir}/declaredProductions/sequence-02.xml" />
    </testCase>

</testCaseGroup>

